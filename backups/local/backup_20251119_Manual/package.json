{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "telephone-directory",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo -p 3000",
        "predev:staging": "copy .env.staging .env.local",
        "dev:staging": "next dev --turbo -p 3001",
        "build": "next build",
        "prebuild:staging": "copy .env.staging .env.local",
        "build:staging": "next build",
        "start": "next start",
        "start:staging": "next start -p 3001",
        "lint": "next lint",
        "check:semgrep": "semgrep --config=p/ci .",
        "check:lizard": "python -m lizard app -C 8",
        "check:trivy": "docker run --rm -v \"$(pwd)\":/project aquasec/trivy fs --security-checks vuln,secret /project",
        "quality:all": "npm run lint && npm run check:semgrep && npm run check:lizard",
        "test": "jest",
        "test:e2e": "jest --config=jest-e2e.config.js",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "export": "next export",
        "deploy": "npm run build && npm run start",
        "deploy:vps": "npm run build && pm2 restart telephone-directory",
        "deploy:setup": "npm ci && npm run build && pm2 start ecosystem.config.js",
        "deploy:staging": "npm run build:staging && vercel --prod",
        "production": "NODE_ENV=production npm start",
        "sync:staging": "git push origin develop && vercel --prod",
        "sync:production": "./scripts/deploy-to-vps.sh",
        "supabase:setup": "npx supabase init && npx supabase start",
        "supabase:start": "npx supabase start",
        "supabase:stop": "npx supabase stop",
        "supabase:status": "npx supabase status",
        "supabase:reset": "npx supabase db reset",
        "automation:windows": "powershell -ExecutionPolicy Bypass -File setup-supabase-automation.ps1",
        "automation:unix": "./setup-supabase-automation.sh",
        "automation:setup": "node -e \"process.platform === 'win32' ? require('child_process').exec('powershell -ExecutionPolicy Bypass -File setup-supabase-automation.ps1 -Action setup') : require('child_process').exec('./setup-supabase-automation.sh setup')\"",
        "codacy:analyze": "node scripts/codacy-analyze.js",
        "codacy:install": "npm install -g codacy-cli",
        "codacy:precommit": "node scripts/pre-commit-codacy.js"
    },
    "dependencies": {
        "@hookform/resolvers": "^3.9.0",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.1",
        "@radix-ui/react-label": "^2.1.0",
        "@radix-ui/react-select": "^2.1.1",
        "@radix-ui/react-slot": "^1.1.0",
        "@radix-ui/react-tabs": "^1.1.0",
        "@radix-ui/react-toast": "^1.2.1",
        "@supabase/auth-helpers-nextjs": "^0.10.0",
        "@supabase/supabase-js": "^2.45.1",
        "bcryptjs": "^2.4.3",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "dotenv": "^17.2.3",
        "lucide-react": "^0.427.0",
        "nanoid": "^5.1.5",
        "next": "^14.2.32",
        "papaparse": "^5.4.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-hook-form": "^7.52.2",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.4.8",
        "@testing-library/react": "^16.0.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^22.4.0",
        "@types/papaparse": "^5.3.14",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^8.57.0",
        "eslint-config-next": "14.2.5",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-puppeteer": "^11.0.0",
        "postcss": "^8.4.41",
        "puppeteer": "^24.26.1",
        "tailwindcss": "^3.4.9",
        "typescript": "^5.5.4"
    }
}
