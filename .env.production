# Production Environment Variables
# For Vercel Production deployment and OVHcloud VPS

# Supabase Configuration - actrec-directory-production
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR_PRODUCTION_PROJECT_ID].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ[YOUR_PRODUCTION_ANON_KEY]
SUPABASE_SERVICE_ROLE_KEY=eyJ[YOUR_PRODUCTION_SERVICE_ROLE_KEY]

# Application Configuration
NODE_ENV=production
PORT=3000
HOSTNAME=0.0.0.0

# Security Configuration
NEXTAUTH_URL=https://actrec-telephone-directory.vercel.app
NEXTAUTH_SECRET=production_secret_minimum_32_characters_long

# Database Configuration (if using external DB)
DATABASE_URL=your_database_connection_string

# Optional: Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id